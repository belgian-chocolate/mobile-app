<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tainguyenbui.techsprint.StartupActivity"
    android:orientation="vertical"
    android:background="@drawable/purple_linear_gradient_background"
    android:layout_gravity="center">

    <ImageView
        android:id="@+id/running_man_imageView"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/running_man"/>

    <TextView
        android:id="@+id/setup_guardian_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/running_man_imageView"
        android:layout_above="@+id/get_started_button"
        android:textSize="42sp"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="@color/background_white"
        android:text="Run the Show" />

    <Button
        android:id="@+id/get_started_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:text="Get Started"
        android:layout_above="@+id/skip_button"
        android:textColor="@color/text_body_colour"
        style="@style/Widget.AppCompat.Button.Colored"
        />

    <Button
        android:id="@+id/skip_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:padding="10dp"
        android:text="Skip"
        android:textColor="@color/text_body_colour"
        android:layout_alignParentBottom="true"
        style="@style/Widget.AppCompat.Button.Colored"
        />

</RelativeLayout>
